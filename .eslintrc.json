{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": [
      "eslint:recommended",
      "standard-with-typescript",
      "plugin:react/recommended",
      "next/core-web-vitals"
   ],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "plugins": ["react"],
   "rules": {
      "semi": ["error", "always", { "omitLastInOneLineBlock": false }],
      "comma-dangle": ["error", "never"],
      "quotes": ["error", "single"],
      "react/prop-types": [0],
      "indent": ["error", "tab"],
      "@typescript-eslint/no-unused-vars": "off"
   }
}
